<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MesenMakanan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (untuk tombol, komponen aktif, dll.). -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (bisa digunakan untuk komponen lain seperti floating action button). -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text color. -->
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
